@using Microsoft.AspNetCore.SignalR.Client
@using System.Threading.Tasks
@using System.Net.Http;
@using System.Net.Http.Headers;
@page "/"
@inject HttpClient Http

<h1>[Heatmap Placeholder]</h1>

<p>
    Right now this is just a table with the list of chores and their status, being updated in real-time. Eventually this will be a house floor plan with icons noting the status of each chore in each zone.
</p>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Assigned To</th>
            <th scope="col">Chore</th>
            <th scope="col">Status</th>
            <th scope="col">Threshold</th>
            <th scope="col">Zone</th>
            <th scope="col">SMS Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chore in Chores)
        {
        <tr>
            <th scope="row">@chore.AssignedTo</th>
            <td>@chore.Message</td>
            <td>@chore.Status</td>
            <td>@chore.Threshold</td>
            <td>@chore.ZoneId</td>
            <td>@chore.SmsStatus</td>
        </tr>
        }
    </tbody>
</table>


@code {
    private string _functionUrl = "https://acs-notify.azurewebsites.net/api/negotiate";
    private string _refreshUrl = "https://acs-notify.azurewebsites.net/api/NotifyHttp";

    public List<Chore> Chores { get; set; } = new List<Chore>();

    private void RemoveExistingChoreFromList(string choreId)
    {
        if(Chores.Any(x => x.ChoreId == choreId))
        {
            Chores.RemoveAll(x => x.ChoreId == choreId);
        }
    }

    protected override async Task OnInitializedAsync()
    {

        var responseMessage = await Http.PostAsJsonAsync(_functionUrl, "");
        var connectionInfo = await responseMessage.Content.ReadFromJsonAsync<ConnectionInfo>();

        var connection = new HubConnectionBuilder()
            .WithUrl("https://acs-notify.azurewebsites.net/api")
            .WithAutomaticReconnect()
            .Build();

        connection.On<Chore>("choreStatusUpdated", (chore) =>
        {
            RemoveExistingChoreFromList(choreId: chore.ChoreId);
            Chores.Add(chore);
            Chores = Chores.OrderBy(x => x.AssignedTo).ThenBy(x => x.Message).ToList();

            StateHasChanged();
        });

        connection.On<Chore>("textingChoreAssignee", (chore) =>
        {
            RemoveExistingChoreFromList(choreId: chore.ChoreId);
            chore.SmsStatus = $"Texting {chore.AssignedTo} a reminder";
            Chores.Add(chore);
            Chores = Chores.OrderBy(x => x.AssignedTo).ThenBy(x => x.Message).ToList();

            StateHasChanged();
        });

        connection.On<Chore>("choreAssigneeTexted", (chore) =>
        {
            RemoveExistingChoreFromList(choreId: chore.ChoreId);
            chore.SmsStatus = $"Reminder sent at {DateTime.Now.ToShortTimeString()}";
            Chores.Add(chore);
            Chores = Chores.OrderBy(x => x.AssignedTo).ThenBy(x => x.Message).ToList();

            StateHasChanged();
        });

        connection.On<string>("smsMessageReceived", (messageId) =>
        {
            Console.WriteLine(messageId);
            var chore = Chores.First(x => x.MessageId == messageId);
            RemoveExistingChoreFromList(choreId: chore.ChoreId);
            chore.SmsStatus = $"Reminder received at {DateTime.Now.ToShortTimeString()}";
            Chores.Add(chore);
            Chores = Chores.OrderBy(x => x.AssignedTo).ThenBy(x => x.Message).ToList();

            StateHasChanged();
        });

        await connection.StartAsync();
    }
}
